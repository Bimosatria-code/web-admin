<!-- Header -->
<%- include('../../../layout/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Master Fee</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Master Fee</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

 <!-- Main content -->
 <section class="content">
  <div class="container-fluid">
		<nav class="nav nav-pills flex-column flex-sm-row">
      <a class="flex-sm-fill text-sm-center nav-link <%= subpath === 'master-fee' ? 'active' : '' %>" href="/master-fee">Purchase & Bill</a>
      <a class="flex-sm-fill text-sm-center nav-link <%= subpath === 'master-transfer_dana' ? 'active' : '' %>" href="/master-transfer">Transfer Dana</a>
      <a class="flex-sm-fill text-sm-center nav-link <%= subpath === 'master-inquiry' ? 'active' : '' %>" href="/master-inquiry">Inquiry</a>
    </nav>
    <br/>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <% var create = previllage.includes(10); if (create) { %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Create</button>
            <% } %>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
              <tr>
								<th>Transaksi</th>
                <th>Pcode</th>
                <th>Biller Code</th>
                <th>Product Type</th>
								<th>Product Code</th>
								<th></th>
              </tr>
              </thead>
              <tbody>
                <% for(let data of m_fee) { %>
                <tr>
                  <td><%= data.transactions %></td>
                  <td><%= data.pcode %></td>
									<td><%= data.biller_code %></td>
                  <td><%= data.product_type %></td>
									<td><%= data.product_code %></td>
                  <td>
                    <% var edit = previllage.includes(11); if (edit) { %>
                    <button class="btn btn-success" onclick="edit('<%= data.id %>')">Edit</i></button>
                    <% } %>
                    <% var del = previllage.includes(12); if (del) { %>
                    <button class="btn btn-danger remove" data-id="<%= data.id %>">Delete</button>
                    <% } %>
                  </td>
                </tr>
								<% } %>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Modal Create -->
<div class="modal fade bd-example-modal-lg" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Master Purchase & Bill</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form autocomplete="off">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Transaksi</label>
            <div class="col-sm-10">
              <input type="text" 
                class="form-control" 
                id="transactions" 
                name="transactions"
                placeholder="Transaksi"
                minlength="1"
                maxlength="40" 
                required="true"
                />
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Pcode</label>
            <div class="col-sm-10">
              <input type="text" 
                class="form-control" 
                id="pcode" 
                name="pcode" 
                placeholder="Pcode" 
                minlength="6"
                maxlength="6" 
                required />
            </div>
          </div>
					<div class="form-group row">
            <label class="col-sm-2 col-form-label">Biller Code</label>
            <div class="col-sm-10">
              <input type="text" 
                class="form-control" 
                id="biller_code" 
                name="biller_code" 
                placeholder="Biller Code" 
                minlength="4"
                maxlength="4" 
                required />
            </div>
          </div>
					<div class="form-group row">
            <label class="col-sm-2 col-form-label">Product Type</label>
            <div class="col-sm-10">
              <input type="text" 
                class="form-control" 
                id="product_type" 
                name="product_type" 
                placeholder="Product Type" 
                minlength="4"
                maxlength="4" required />
            </div>
          </div>
					<div class="form-group row">
            <label class="col-sm-2 col-form-label">Product Code</label>
            <div class="col-sm-10">
              <input type="text" 
                class="form-control" 
                id="product_code" 
                name="product_code" 
                placeholder="Product Code" 
                minlength="4"
                maxlength="4" 
                required />
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-primary save">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

